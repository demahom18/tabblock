{
    "manifest_version": 3,
    "version": "0.0.1",
    "name": "Tabblock",
    "description": "Block the opening of intempestive and unwanted tabs on a website",
    "permissions": ["storage", "tabs","activeTab"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content_script.js"]
    }],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/assets/icon16.png",
            "32": "/assets/icon32.png"
          }
    },
    "icons": {
        "16": "/assets/icon16.png",
        "32": "/assets/icon32.png"
    }
}